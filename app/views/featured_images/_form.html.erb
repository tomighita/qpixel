<%= form_with(model: @featured_image) do |form| %>

  <div class="form-group">
    <%= form.label :header_text, "Header text", class: 'form-element' %>
    <span class="form-caption">
        <%#= t('posts.order_caption') %>
      This will be displayed beneath the featued image, as a title
    </span>
    <%= form.text_field :header_text, class: 'form-element' %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Featured image", class: 'form-element' %>
    <span class="form-caption">
        <%#= t('posts.order_caption') %>
      This will be used as the featured image
    </span>
    <%= form.file_field :image, class: 'form-element' %>
  </div>

  <% if featured_image.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(featured_image.errors.count, "error") %> prohibited this featured_image from being saved:</h2>

      <ul>
        <% featured_image.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.submit "Save", class: 'button is-filled' %>
    <%= link_to "Cancel", moderator_path, class: 'button is-muted is-outlined is-danger' %>
  </div>
<% end %>
